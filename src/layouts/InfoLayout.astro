---
import BaseLayout from './BaseLayout.astro';
import TelegramCTA from '../components/TelegramCTA.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="info-page">
    <div class="container">
      <header class="info-header">
        <h1>{title}</h1>
      </header>

      <div class="info-content">
        <slot />
      </div>

      <TelegramCTA
        title="Остались вопросы?"
        subtitle="Напишите в Telegram — Андрей подробно ответит на все вопросы."
      />
    </div>
  </article>
</BaseLayout>

<style>
  .info-page {
    padding: var(--space-2xl) 0;
  }

  .info-header {
    margin-bottom: var(--space-2xl);
  }

  .info-header h1 {
    font-size: 2.5rem;
  }

  .info-content {
    max-width: 720px;
  }

  .info-content :global(h2) {
    font-size: 1.5rem;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }

  .info-content :global(p) {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .info-content :global(ul),
  .info-content :global(ol) {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .info-content :global(li) {
    margin-bottom: var(--space-sm);
  }

  .info-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .info-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
  }

  .info-content :global(a:hover) {
    color: var(--accent-hover);
  }

  @media (max-width: 768px) {
    .info-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
