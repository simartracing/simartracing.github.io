---
export interface Props {
  text?: string;
}

const { text } = Astro.props;
---

<div class="divider">
  {text ? (
    <span class="divider-text">{text}</span>
  ) : (
    <span class="divider-line"></span>
  )}
</div>

<style>
  .divider {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl) 0;
    grid-column: 1 / -1;
  }

  .divider-line {
    display: block;
    width: 60px;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--accent),
      transparent
    );
  }

  .divider-text {
    color: var(--text-muted);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0 var(--space-lg);
    position: relative;
  }

  .divider-text::before,
  .divider-text::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 40px;
    height: 1px;
    background-color: var(--border);
  }

  .divider-text::before {
    right: 100%;
  }

  .divider-text::after {
    left: 100%;
  }
</style>
