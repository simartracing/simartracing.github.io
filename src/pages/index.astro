---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import AvitoRating from '../components/AvitoRating.astro';
import TelegramCTA from '../components/TelegramCTA.astro';
import { cockpits, accessories } from '../data/products';
---

<BaseLayout title="Кокпиты для симрейсинга">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">Кокпиты для симрейсинга</h1>
      <p class="hero-subtitle">
        Изготавливаем прочные и эргономичные кокпиты в Москве.
        Индивидуальный подход к каждому заказу.
      </p>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="products section">
    <div class="container">
      <div class="showcase">
        <!-- Кокпит Pro (2×2) -->
        <div class="cell-cockpit" style="grid-area: c1;">
          <ProductCard
            name={cockpits[0].name}
            price={cockpits[0].price}
            image={cockpits[0].image}
            description={cockpits[0].description}
            size="large"
          />
        </div>

        <!-- Аксессуары 1-2 (справа от Pro, row 1) -->
        <div class="cell-accessory" style="grid-area: a1;">
          <ProductCard {...accessories[0]} size="small" />
        </div>
        <div class="cell-accessory" style="grid-area: a2;">
          <ProductCard {...accessories[1]} size="small" />
        </div>

        <!-- Кокпит Standard (2×2, row 2-3 справа) -->
        <div class="cell-cockpit" style="grid-area: c2;">
          <ProductCard
            name={cockpits[1].name}
            price={cockpits[1].price}
            image={cockpits[1].image}
            description={cockpits[1].description}
            size="large"
          />
        </div>

        <!-- Аксессуары 3-4 (слева от Standard, row 3) -->
        <div class="cell-accessory" style="grid-area: a3;">
          <ProductCard {...accessories[2]} size="small" />
        </div>
        <div class="cell-accessory" style="grid-area: a4;">
          <ProductCard {...accessories[3]} size="small" />
        </div>

        <!-- Кокпит Basic (2×2, row 4-5 слева) -->
        <div class="cell-cockpit" style="grid-area: c3;">
          <ProductCard
            name={cockpits[2].name}
            price={cockpits[2].price}
            image={cockpits[2].image}
            description={cockpits[2].description}
            size="large"
          />
        </div>

        <!-- Аксессуары 5-8 (справа от Basic, row 4-5) -->
        <div class="cell-accessory" style="grid-area: a5;">
          <ProductCard {...accessories[4]} size="small" />
        </div>
        <div class="cell-accessory" style="grid-area: a6;">
          <ProductCard {...accessories[5]} size="small" />
        </div>
        <div class="cell-accessory" style="grid-area: a7;">
          <ProductCard {...accessories[6]} size="small" />
        </div>
        <div class="cell-accessory" style="grid-area: a8;">
          <ProductCard {...accessories[7]} size="small" />
        </div>

        <!-- Оставшиеся аксессуары -->
        {accessories.slice(8).map((acc) => (
          <div class="cell-accessory cell-remaining">
            <ProductCard {...acc} size="small" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Avito Rating -->
  <section class="container">
    <AvitoRating />
  </section>

  <!-- Telegram CTA -->
  <section class="container">
    <TelegramCTA />
  </section>
</BaseLayout>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    text-align: center;
    background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    color: var(--text-secondary);
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Сложная сетка: кокпиты лесенкой */
  .showcase {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-areas:
      "c1  c1  a1  a2"
      "c1  c1  c2  c2"
      "a3  a4  c2  c2"
      "c3  c3  a5  a6"
      "c3  c3  a7  a8";
    gap: var(--space-md);
  }

  .cell-cockpit {
    min-height: 400px;
  }

  .cell-remaining {
    grid-area: auto;
  }

  /* Мобильная версия: сначала кокпиты, потом аксессуары */
  @media (max-width: 900px) {
    .showcase {
      display: flex;
      flex-direction: column;
      gap: var(--space-md);
    }

    .cell-cockpit {
      order: -1;
      min-height: auto;
    }

    .cell-accessory {
      order: 10;
    }
  }

  @media (max-width: 600px) {
    .showcase {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-areas: none;
    }

    .cell-cockpit {
      grid-column: span 2;
      order: -1;
    }

    .cell-accessory {
      grid-column: span 1;
      order: 10;
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>
